<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="info.androidhive.cardview.walHisFragment"
    android:id="@+id/Alayout">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dash"
            android:text="ALL BALANCE"
            android:textColor="#000000"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            android:id="@+id/intro"
            android:layout_weight="2"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/activity_vertical_margin"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@id/intro"
            android:visibility="gone"
            android:id="@+id/mainL">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_below="@id/intro"
                android:id="@+id/relIncome">

                <ImageView
                    android:id="@+id/incomeIm"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax"
                    android:src="@drawable/icons8_money_bag_filled_50"
                    android:padding="4dp"
                    android:tint="@color/green" />
                <TextView
                    android:id="@+id/credit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/incomeIm"
                    android:padding="8dp"
                    android:text="Credit Balance"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_centerVertical="true"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/credit_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="0.00"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:background="@drawable/dash"
                    android:layout_centerVertical="true"
                    android:textColor="@color/green"/>




            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_below="@id/relIncome"
                android:id="@+id/relDebit">

                <ImageView
                    android:id="@+id/debitIm"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax"
                    android:src="@drawable/icons8_donate_64"
                    android:padding="4dp"
                    android:tint="@color/red" />
                <TextView
                    android:id="@+id/debit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Debit Balance"
                    android:layout_toRightOf="@id/debitIm"
                    android:padding="8dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_centerVertical="true"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/debit_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="0.00"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:background="@drawable/dash"
                    android:layout_centerVertical="true"
                    android:textColor="@color/red"/>




            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_below="@id/relDebit"
                android:id="@+id/relRef">

                <ImageView
                    android:id="@+id/refIm"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax"
                    android:src="@drawable/icons8_receive_cash_64"
                    android:padding="4dp"
                    android:tint="@color/yellow" />
                <TextView
                    android:id="@+id/ref"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Referral Balance"
                    android:layout_toRightOf="@id/refIm"
                    android:padding="8dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_centerVertical="true"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/ref_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="0.00"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:background="@drawable/dash"
                    android:layout_centerVertical="true"
                    android:textColor="@color/yellow"/>




            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_below="@id/relRef"
                android:id="@+id/relTotal">

                <ImageView
                    android:id="@+id/totalIm"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax"
                    android:src="@drawable/icons8_money_bag_filled_50"
                    android:padding="4dp"
                    android:tint="@color/blue" />
                <TextView
                    android:id="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Balance"
                    android:layout_toRightOf="@id/totalIm"
                    android:padding="8dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_centerVertical="true"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/total_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="0.00"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:background="@drawable/dash"
                    android:layout_centerVertical="true"
                    android:textColor="@color/blue"/>




            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pro2"
        android:layout_gravity="center"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:tint="@android:color/white"
        app:srcCompat="@drawable/wallet"
        app:backgroundTint="@color/red"/>

</FrameLayout>
