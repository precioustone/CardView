<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="info.androidhive.cardview.ProfileActivity"
    tools:showIn="@layout/app_bar_profile"
    android:background="#FFF9F9F9">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/prof_cont">

        <fragment
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="info.androidhive.cardview.showProfileFragment"
            android:tag="SHOW_PROFILE"
            android:id="@+id/show_profile"/>

    </FrameLayout>

</android.support.v4.widget.NestedScrollView>

