<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="info.androidhive.cardview.editProfileFragment">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile_con"
        android:background="#FFF9F9F9">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relNam"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_alignParentTop="true">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="32dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/namIm"
                app:srcCompat="@drawable/ic_account_circle_black_24dp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/activity_vertical_margin"/>



                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:inputType="text"
                    android:layout_toRightOf="@id/namIm"
                    android:layout_toEndOf="@id/namIm"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFC6C6C6"
                android:layout_below="@id/namIm"
                android:layout_toRightOf="@id/namIm"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relEma"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_below="@id/relNam">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="32dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/emailIm"
                app:srcCompat="@drawable/ic_email_black_24dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"/>



                <TextView
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:inputType="text"
                    android:layout_toRightOf="@id/emailIm"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFC6C6C6"
                android:layout_below="@id/emailIm"
                android:layout_toRightOf="@id/emailIm"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_below="@id/relEma"
            android:id="@+id/relphone">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="32dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/phoneIm"
                app:srcCompat="@drawable/ic_local_phone_black_24dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/phoneWrap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/phoneIm"
                android:layout_toEndOf="@id/phoneIm">

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Phone"
                    android:inputType="phone" />
            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFC6C6C6"
                android:layout_below="@id/phoneIm"
                android:layout_toRightOf="@id/phoneIm"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_below="@id/relphone"
            android:id="@+id/relAdd">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="32dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/addIm"
                app:srcCompat="@drawable/ic_place_black_24dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/addressWrap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/addIm"
                android:layout_toEndOf="@id/addIm">

                <EditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Address"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFC6C6C6"
                android:layout_below="@id/addIm"
                android:layout_toRightOf="@id/addIm"/>

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_below="@id/relAdd">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="32dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/birthIm"
                app:srcCompat="@drawable/ic_date_range_black_24dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/birthWrap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/birthIm"
                android:layout_toEndOf="@id/birthIm">

                <EditText
                    android:id="@+id/birth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="05/05/2020"
                    android:inputType="phone" />
            </android.support.design.widget.TextInputLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFC6C6C6"
                android:layout_below="@id/birthIm"
                android:layout_toRightOf="@id/birthIm"/>

        </RelativeLayout>



    </RelativeLayout>

</FrameLayout>
